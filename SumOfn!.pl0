var n, m, fact, sum;

procedure factorial;
begin
    if m > 0 then
        begin
            fact := fact * m;
            m := m - 1;
            call factorial
        end;
end;

begin
    sum := 0;
    n := 5;
    while n > 0 do
        begin
            m := n;
            fact := 1;
            call factorial;
            sum  := sum + fact;
            n := n - 1
        end;
end.
